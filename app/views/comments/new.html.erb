<div class="container">
  <h2>New Comment</h2>
  <ul>
    <% @comment.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>
  <%= form_with(model: @comment, url: board_task_comments_path, local: true) do |f| %>
    <div>
      <%= f.label :content, '内容' %>
    </div>
    <div>
      <%= f.text_area :content %>
    </div>
    <%= f.submit '保存', class: 'btn-primary' %>
  <% end %>
</div>