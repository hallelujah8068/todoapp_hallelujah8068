<div class="container">
  <h2>New Card</h2>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>
  <%= form_with(model: [@board, @task], local: true) do |f| %>
    <div>
      <%= f.label :eyecatch, 'アイキャッチ'%>
    </div>
    <div>
      <%= f.file_field :eyecatch %>
    </div>
    <div>
      <%= f.label :title, 'タイトル' %>
    </div>
    <div>
      <%= f.text_field :title, class: 'text' %>
    </div>
    <div>
      <%= f.label :description, '内容' %>
    </div>
    <div>
      <%= f.text_area :description %>
    </div>
    <%= f.submit '保存', class: 'btn-primary' %>
  <% end %>
</div>